<h1>Edit Post</h1>

{{#each errors}}
    <div class="alert alert-danger">{{message}}</div>
{{/each}}

<form action="/admin/posts/edit/{{post.id}}?_method=PUT" method="POST" enctype="multipart/form-data">
    <div class="form-group">
        <label for"title">Title</label>
        <input name="title" type="text" class="form-control" id="title" value="{{post.title}}" required />
    </div>
    <div class="form-group">
        <label for="file">File Upload</label>
        <input type="file" name="file" class="form-control" value="{{post.file}}" />
    </div>
    <div class="form-group">
        <label for"category">Category</label>
        <select name="category" id="category" class="form-control">
            {{#select post.category}}
            {{#each cat}}
            <option value="{{id}}">{{name}}</option>
            {{/each}}
            {{/select}}
        </select>
    </div>
    <div class="form-group">
        <label for"status">Status</label>
        <select name="status" id="status" class="form-control">
        {{#select post.status}}
            <option value="public">Public</option>
            <option value="private">Private</option>
            <option value="draft">Draft</option>
        {{/select}}
        </select>
    </div>

    <div class="form-check">
        <label for="allowComments" class="form-check-label">
        <input name="allowComments" type="checkbox" {{#if post.allowComments}}checked="checked{{/if}} class="form-check-input" id="allowComments">Allow Comments</input>
        </label>
    </div>
    <div class="form-group">
        <label for="body">Body</label>
        <textarea required  name="body" cols="30" rows="10" class="form-control" id="body" required>{{post.body}}</textarea>
    </div>

    <button type="submit" class="btn btn-primary">Update Post</button>
</form>